{
    "version": "10.0-f3bc2f0",
    "description": "An open source Minecraft launcher with the ability to manage multiple instances, accounts and mods. Focused on user freedom and free redistributability.",
    "homepage": "https://prismlauncher.org/",
    "license": "GPL-3.0-only",
    "notes": "To add Prism Launcher file association options for .ZIPs and .MRPACKS, run this: \"$dir\\install-associations.reg\"",
    "architecture": {
        "64bit": {
            "url": "https://nightly.link/PrismLauncher/PrismLauncher/workflows/build/develop/PrismLauncher-Windows-MSVC-Portable-f3bc2f0-Debug.zip",
            "hash": "221475DFF9CAD3EB2D7167F47BA1844A8192ED49CFD6886198781BC863514BE2"
        }
    },
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "post_install": [
        "'install-associations', 'uninstall-associations' | ForEach-Object {",
        "    if (Test-Path \"$bucketsdir\\versions\\scripts\\prismlauncher-git\\$_.reg\") {",
        "        $exePath = \"$dir\\prismlauncher.exe\".Replace('\\', '\\\\')",
        "        $content = (Get-Content \"$bucketsdir\\versions\\scripts\\prismlauncher-git\\$_.reg\").Replace('$EXEPATH', $exePath)",
        "        if ($global) { $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE') }",
        "        Set-Content \"$dir\\$_.reg\" $content -Encoding Ascii -Force",
        "    }",
        "}"
    ],
    "bin": "prismlauncher.exe",
    "shortcuts": [
        [
            "prismlauncher.exe",
            "Prism Launcher"
        ]
    ],
    "checkver": {
        "script": [
            "$commit = Invoke-RestMethod 'https://api.github.com/repos/PrismLauncher/PrismLauncher/commits/develop'",
            "$fullSha = $commit.sha",
            "$shortSha = $fullSha.Substring(0, 7)",
            "$cmakeContent = Invoke-WebRequest \"https://raw.githubusercontent.com/PrismLauncher/PrismLauncher/$fullSha/CMakeLists.txt\"",
            "$majorVersion = [regex]::Match($cmakeContent, 'set\\(Launcher_VERSION_MAJOR (\\d+)\\)').Groups[1].Value",
            "$minorVersion = [regex]::Match($cmakeContent, 'set\\(Launcher_VERSION_MINOR (\\d+)\\)').Groups[1].Value",
            "Write-Output \"$majorVersion.$minorVersion-$shortSha\""
        ],
        "regex": "([\\d.]+)-([a-f0-9]{7})"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nightly.link/PrismLauncher/PrismLauncher/workflows/build/develop/PrismLauncher-Windows-MSVC-Portable-$match2-Debug.zip"
            }
        }
    }
}
