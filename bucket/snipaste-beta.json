{
    "homepage": "https://www.snipaste.com/",
    "version": "2.2.1-Beta2",
    "license": "Freeware",
    "description": "Snip & Paste, a simple but powerful snipping tool.",
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.2.1-Beta2-x64.zip",
            "hash": "sha1:244c29cfda75c78ba59ab59b34a876fbde1e2fba"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.2.1-Beta2-x86.zip",
            "hash": "sha1:cdf3cfd51befc34b15f1394796e873d244971754"
        }
    },
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.ini\")) { Set-Content \"$dir\\config.ini\" '' -Encoding ASCII }",
    "persist": [
        "history",
        "config.ini"
    ],
    "bin": "Snipaste.exe",
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste"
        ]
    ],
    "suggest": {
        "vcredist": "extras/vcredist2015"
    },
    "checkver": {
        "regex": "(?sm)Desktop.*?>v(?<main>[\\d.]+) Beta(?<build>\\d+)?",
        "replace": "${main}-Beta${build}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$matchMain-Beta$matchBuild-x64.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x64.zip"
                }
            },
            "32bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$matchMain-Beta$matchBuild-x86.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x86.zip"
                }
            }
        }
    }
}
