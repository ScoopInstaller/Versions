{
    "version": "rc1",
    "description": "A feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface.",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc1/mono/Godot_v4.0-rc1_mono_win64.zip",
            "hash": "sha512:757a347bfcf4a14a1d726a7fcf60a2efd5761831738c9f480b21f00b6065d2fb8e07031f1e82f8811d444092765da79066acd1a88b5edee156980a7c82f6e302",
            "extract_dir": "Godot_v4.0-rc1_mono_win64"
        },
        "32bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc1/mono/Godot_v4.0-rc1_mono_win32.zip",
            "hash": "sha512:b78d21802b0771a22ff56a1dea68e1bb70f5bd5363f93e534230425589895097546fa9b028d9c1897d4b94149ffae3f5329a984c2fadaa74f2d1991ad5f8d8f2",
            "extract_dir": "Godot_v4.0-rc1_mono_win32"
        }
    },
    "pre_install": [
        "Remove-Item \"$dir\\Godot_*_console.*\"",
        "Get-Item \"$dir\\Godot_*.exe\" | Rename-Item -NewName 'godot-mono.exe'"
    ],
    "bin": "godot-mono.exe",
    "shortcuts": [
        [
            "godot-mono.exe",
            "Godot Engine (Mono)"
        ]
    ],
    "checkver": {
        "script": [
            "$WebResponseObj = Invoke-WebRequest -Uri 'https://downloads.tuxfamily.org/godotengine/4.0/'",
            "$html = $WebResponseObj.content",
            "$links = $WebResponseObj.ParsedHtml.getElementsByTagName('a') | Select-Object -Skip 1",
            "$versions = ($links | foreach {$_.textContent})",
            "$sortedVersions = $versions | Sort-Object {$_ -NotMatch 'pre-'},{$_ -Replace '\\d',''},{($_ -Replace '\\D','') -as [int]}",
            "$sortedVersions[-1]"
        ],
        "regex": "(.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$preReleaseVersion/mono/Godot_v4.0-$version_mono_win64.zip",
                "extract_dir": "Godot_v4.0-$version_mono_win64"
            },
            "32bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$preReleaseVersion/mono/Godot_v4.0-$version_mono_win32.zip",
                "extract_dir": "Godot_v4.0-$version_mono_win32"
            }
        },
        "hash": {
            "url": "$baseurl/SHA512-SUMS.txt"
        }
    }
}
