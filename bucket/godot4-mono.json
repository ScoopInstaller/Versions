{
    "version": "rc2",
    "description": "A feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface.",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc2/mono/Godot_v4.0-rc2_mono_win64.zip",
            "hash": "sha512:6ed6ccc65a693f579a80b3ad397eddb022fabb801f6e11935f86c55a213de00a5a588ad99355a5d461a5d7fcd7b3f10a35d8568768dc56e1f167c3b735cdd503",
            "extract_dir": "Godot_v4.0-rc2_mono_win64"
        },
        "32bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc2/mono/Godot_v4.0-rc2_mono_win32.zip",
            "hash": "sha512:1735c65720b0859aaadc9cc176048f38d28eacb9397d64a7c74a2101df379e7161b68e4a845f6b14f0f4d00f82c72a7b02283bffa129e75ea186ac3026db003a",
            "extract_dir": "Godot_v4.0-rc2_mono_win32"
        }
    },
    "pre_install": [
        "Remove-Item \"$dir\\Godot_*_console.*\"",
        "Get-Item \"$dir\\Godot_*.exe\" | Rename-Item -NewName 'godot-mono.exe'"
    ],
    "bin": "godot-mono.exe",
    "shortcuts": [
        [
            "godot-mono.exe",
            "Godot Engine (Mono)"
        ]
    ],
    "checkver": {
        "script": [
            "$WebResponse = Invoke-WebRequest('https://downloads.tuxfamily.org/godotengine/4.0/')",
            "$links = $WebResponse.Links | Select-Object -Skip 1",
            "$versions = $links | foreach {$_.innerText}",
            "$sortedVersions = $versions | Sort-Object {$_ -NotMatch 'pre-'},{$_ -Replace '\\d',''},{($_ -Replace '\\D','') -as [int]}",
            "$ver = $sortedVersions | Select-Object -Last 1",
            "Write-Output $ver"
        ],
        "regex": "(\\S+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$version/mono/Godot_v4.0-$version_mono_win64.zip",
                "extract_dir": "Godot_v4.0-$version_mono_win64"
            },
            "32bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$version/mono/Godot_v4.0-$version_mono_win32.zip",
                "extract_dir": "Godot_v4.0-$version_mono_win32"
            }
        },
        "hash": {
            "url": "$baseurl/SHA512-SUMS.txt"
        }
    }
}
