    "homepage": "https://helium.computer",
    "license": "BSD-3-Clause, GPL-3.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://github.com/imputnet/helium-windows/releases/download/0.6.3.1/helium_0.6.3.1_x64-windows.zip",
            "hash": "c02c9fe1d4fa13e22fedc256fd901fdf33a1bde735d34090b5f3e37f36f3a554",
            "extract_dir": "helium_0.6.3.1_x64-windows"
        },
        "arm64": {
            "url": "https://github.com/imputnet/helium-windows/releases/download/0.6.3.1/helium_0.6.3.1_arm64-windows.zip",
            "hash": "9fbaa3006e29b678f7ca2c39baf8ebc05df3622fb319e7bc6d99d0d5774ff5a0",
            "extract_dir": "helium_0.6.3.1_arm64-windows"
        }
    },
    "bin": [
        [
            "chrome.exe",
            "helium-pre",
            "--user-data-dir=\"$persist_dir\\User Data\""
        ]
    ],
    "shortcuts": [
        [
            "chrome.exe",
            "Helium (Pre-release)",
            "--user-data-dir=\"$persist_dir\\User Data\""
        ]
    ],
    "persist": "User Data",
    "post_install": [
        "$appdata = \"$env:LOCALAPPDATA\\imput\\Helium\\User Data\"",
        "$persistData = \"$persist_dir\\User Data\"",
        "if (!(Test-Path $persistData)) {",
        "    New-Item -ItemType Directory -Path $persistData | Out-Null",
        "}",
        "if (Test-Path $appdata) {",
        "    Write-Host \"Migrating existing data from AppData to persist directory...\"",
        "    try {",
        "        Get-ChildItem -Path $appdata | ForEach-Object {",
        "            Move-Item -Path $_.FullName -Destination $persistData -Force -ErrorAction Stop",
        "        }",
        "        if ((Get-ChildItem -Path $appdata -Recurse -ErrorAction SilentlyContinue | Measure-Object).Count -eq 0) {",
        "            Remove-Item $appdata -Recurse -Force",
        "            Write-Host \"Migration completed successfully.\"",
        "        }",
        "    } catch {",
        "        Write-Host \"Warning: Migration encountered an error: $_\" -ForegroundColor Yellow",
        "    }",
        "}",
        "if (!(Test-Path $appdata)) {",
        "    New-Item -ItemType Junction -Path $appdata -Target $persistData | Out-Null",
        "}"
    ],
    "post_uninstall": [
        "$appdata = \"$env:LOCALAPPDATA\\imput\\Helium\\User Data\"",
        "if ((Get-Item $appdata -ErrorAction SilentlyContinue)?.LinkType -eq 'Junction') {",
        "    Remove-Item $appdata -Force",
        "}"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/imputnet/helium-windows/releases",
        "jsonpath": "$.[0].tag_name"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/imputnet/helium-windows/releases/download/$version/helium_$version_x64-windows.zip",
                "extract_dir": "helium_$version_x64-windows"
            },
            "arm64": {
                "url": "https://github.com/imputnet/helium-windows/releases/download/$version/helium_$version_arm64-windows.zip",
                "extract_dir": "helium_$version_arm64-windows"
            }
        }
    }
}
