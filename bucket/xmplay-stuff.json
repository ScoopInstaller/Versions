    "pre_install": [
        "# Create placeholder files",
        "function CreateFile([String[]] $file) {",
        "    foreach ($f in $file) {",
        "        if (! (Test-Path \"$dir\\$f\")) { New-Item \"$dir\\$f\" -ItemType 'File' | Out-Null }",
        "    }",
        "}",
        "CreateFile 'xmplay.ini', 'xmplay.library', 'xmplay.pls'"
    ],
    "bin": [
        [
            "xmplay.exe",
            "xmplay-stuff"
        ]
    ],
    "shortcuts": [
