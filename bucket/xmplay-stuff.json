        ]
    ],
    "persist": [
        "xmplay.ini",
        "xmplay.library",
        "xmplay.pls",
        "plugins",
        "skins"
    ],
    "checkver": {
        "url": "https://www.un4seen.com/xmplay-stuff.php",
        "regex": "([\\d.]+)</span>"
