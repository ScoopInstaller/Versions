    "notes": [
        "To set profile 'Scoop-Nightly' as *DEFAULT*, or profiles/settings was lost after update:",
        "  - Run 'Firefox Nightly Profile Manager', choose 'Scoop-Nightly' then click 'Start Nightly'.",
        "  - Visit 'about:profiles' page in Firefox Nightly to check *DEFAULT* profile.",
        "For details: https://support.mozilla.org/en-US/kb/profile-manager-create-remove-switch-firefox-profiles"
    ],
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/2023/11/2023-11-06-09-40-18-mozilla-central/firefox-121.0a1.en-US.win64.installer.exe#/dl.7z",
            "hash": "sha512:b2357fa59820eeab7b11fcd8b1f477b07e496ece5c2ada956994fe2b24942c791f1e932376dbd72943db239110cc0c7a6e8677aef7bd2a81846763960fec9509"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/nightly/2023/11/2023-11-06-09-40-18-mozilla-central/firefox-121.0a1.en-US.win32.installer.exe#/dl.7z",
