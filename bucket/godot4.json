{
    "version": "rc2",
    "description": "A feature-packed, cross-platform game engine to create 2D and 3D games from a unified interface.",
    "homepage": "https://godotengine.org/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc2/Godot_v4.0-rc2_win64.exe.zip",
            "hash": "sha512:5e84908a90ed493d6bdc50ba275c6af16f05dac449dceb3e167bb79d6e29086a1e0ca4f1f94ac105cbe1fa75eb2ce5f78779020f08f9d6d4dfe7c68d5b100886"
        },
        "32bit": {
            "url": "https://downloads.tuxfamily.org/godotengine/4.0/rc2/Godot_v4.0-rc2_win32.exe.zip",
            "hash": "sha512:4767a2e408fd4fcb1a704e36dd7add566c41c9b803a129204d6b52f7ea0aa94a7f9ff36ecf2c4e4545fac285dd145b7308c82ad6f679c2c4349ce040c98eb872"
        }
    },
    "pre_install": [
        "Remove-Item \"$dir\\Godot_*_console.*\"",
        "Get-Item \"$dir\\Godot_*.exe\" | Rename-Item -NewName 'godot.exe'"
    ],
    "bin": "godot.exe",
    "shortcuts": [
        [
            "godot.exe",
            "Godot Engine"
        ]
    ],
    "checkver": {
        "script": [
            "$WebResponse = Invoke-WebRequest('https://downloads.tuxfamily.org/godotengine/4.0/')",
            "$links = $WebResponse.Links | Select-Object -Skip 1",
            "$versions = $links.href.Where({ $_.EndsWith('/') }).ForEach({ $_.Replace('/', '') })",
            "$sortedVersions = $versions | Sort-Object {$_ -NotMatch 'pre-'}, {$_ -Replace '\\d*',''}, {[int]($_ -Replace '\\D*','')}",
            "Write-Output $sortedVersions[-1]"
        ],
        "regex": "(\\S+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$version/Godot_v4.0-$version_win64.exe.zip"
            },
            "32bit": {
                "url": "https://downloads.tuxfamily.org/godotengine/4.0/$version/Godot_v4.0-$version_win32.exe.zip"
            }
        },
        "hash": {
            "url": "$baseurl/SHA512-SUMS.txt"
        }
    }
}
